<div class="item-sell-main">
  <h2 class="item-sell-title">商品の情報を入力</h2>
  <%= form_with model: @item, local: true do |f| %>
  <%# 商品画像 %>
  <div class="img-upload">
    <div class="weight-bold-text">
      商品画像
    </div>
    <div class="click-upload">
      <%= f.file_field :image, id:"item-image" %>
    </div>
  </div>
  <%# 商品画像 %>
  <%# 商品名と内容 %>
  <div class="new-items">
    <div class="weight-bold-text">
      商品名
    </div>
    <%= f.text_area :product, class:"items-text", id:"item-name", placeholder:"商品名（必須 30文字まで)", maxlength:"30" %>
    <div class="items-explain">
      <div class="weight-bold-text">
        商品の説明
      </div>
      <%= f.text_area :contents, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（サイズ、素材、重さ、定価、注意点など）" ,rows:"7" ,maxlength:"1000" %>
    </div>
  </div>
  <%# 商品名と内容 %>
  <%# 商品詳細 %>
  <div class="items-detail">
    <div class="weight-bold-text">商品の詳細</div>
    <div class="form">
      <div class="weight-bold-text">
        カテゴリー
      </div>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      <div class="weight-bold-text">
        在庫
      </div>
      <%= f.text_area :stock, class:"items-text", id:"item-name", placeholder:"在庫（必須 )", maxlength:"30" %>
      <div class="weight-bold-text">
        製造業社名
      </div>
      <%= f.text_area :maker, class:"items-text", id:"item-name", placeholder:"製造業社名または出品元の地域", maxlength:"30" %>
    </div>
  </div>
  <%# 商品詳細 %>
  <%# 販売価格 %>
  <div class="sell-price">
    <div class="weight-bold-text question-text">
      <span>販売価格<br>(¥300〜9,999,999)</span>
    </div>
    <div>
      <div class="price-content">
        <div class="price-text">
          <span>価格</span>
          <span class="indispensable">必須</span>
        </div>
        <span class="sell-yen">¥</span>
        <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
      </div>
      <div class="price-content">
        <span>販売手数料 (10%)</span>
        <span>
          <span id='add-tax-price'></span>円
        </span>
      </div>
      <div class="price-content">
        <span>販売利益</span>
        <span>
          <span id='profit'></span>円
      </div>
      </span>
    </div>
  </div>
  <%# 販売価格 %>
  <%# 下部ボタン %>
  <div class="sell-btn-contents">
    <%= f.submit "出品する" ,class:"sell-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
  <%# /下部ボタン %>
  <% end %>
</div>
